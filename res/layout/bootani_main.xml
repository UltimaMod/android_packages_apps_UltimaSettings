<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.52"
        android:orientation="vertical" >

        <TextView
            android:id="@id/bootani_selected_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bootani_selected_file"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/material_teal" />

        <TextView
            android:id="@id/bootani_selected_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_red"
            android:text="@string/none" />

        <TextView
            android:id="@+id/bootani_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/bootani_status"
            android:textColor="@color/material_teal" />

        <TextView
            android:id="@+id/bootani_status_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none" />

        <TextView
            android:id="@+id/bootani_status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none" />

    </LinearLayout>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <Button
            android:id="@id/bootani_choose_file_button"
            android:layout_width="@dimen/bootani_choose_file_width"
            android:layout_height="wrap_content"
            android:text="@string/choose_file" />

        <Button
            android:id="@+id/bootani_clear_file_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_file" />
	    
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@id/bootani_set_animation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bootani_set_animation" />

        <Button
            android:id="@id/bootani_reset_default_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bootani_restore_default" />

        <Button
            android:id="@+id/bootani_boot_toggle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bootani_boot_toggle" />
    </LinearLayout>

</LinearLayout>